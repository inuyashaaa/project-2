<%= provide :nav, "login" %>

<div class="login">
  <div class="login-grids">
    <div class="col-md-6 log">
      <h3 class="tittle"><%= t ".login_title" %> <i class="glyphicon glyphicon-lock"></i></h3>
      <p><%= t ".welcome" %></p>
      <p><%= t ".if_you" %> <%= link_to t(".click_here"), "#" %></p>
      <%= form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
        <h5><%= t ".user_name" %>:</h5>
        <%= f.text_field :email, autofocus: true %>
        <h5><%= t ".password" %>:</h5>
        <%= f.password_field :password, autocomplete: "off" %>
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <input type="submit" value="<%= t ".login_title" %>">
      <% end %>
      <%= render "devise/shared/links" %>
    </div>

    <div class="col-md-6 login-right">
      <h3 class="tittle">
        <%= t ".new_registration" %> <i class="glyphicon glyphicon-file"></i>
      </h3>
      <p><%= t ".login_content" %></p>
      <%= link_to t(".create_account"), new_user_registration_path, class: "hvr-bounce-to-bottom button" %>
    </div>
    <div class="clearfix"></div>
  </div>
</div>
