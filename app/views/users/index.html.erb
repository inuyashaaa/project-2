<% provide :title, t(".title") %>
<div class="list-user">
  <h1 class="text-center text-primary"><%= t ".title" %></h1>
  <div class="row">
    <table class="table table-hover">
      <thead>
        <tr>
          <th><%= t ".user" %></th>
          <th><%= t ".email" %></th>
          <th><%= t ".phone" %></th>
          <th><%= t ".action" %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @users %>
      </tbody>
    </table>
  </div>
  <p>
    Download:
    <%= link_to "Excel_By_Xml", xml_index_path(format: "xls") %>
  </p>
  <%= paginate @users %>
</div>
