<% provide :title, @user.name %>
<div class="row show-user">
  <aside class="col-md-3">
    <section class="user_info">
      <h3>
        <%= image_tag "default-avatar.jpg", class: "img-responsive media-object" %>
        <%= @user.name %>
      </h3>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-9">
    <%= render "follow_form" if user_signed_in? %>
    <% if @user.posts.any? %>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= paginate @posts %>
    <% end %>
  </div>
</div>
